{
  "build": {
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Soccer Event Tagger",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Soccer Event Tagger",
        "width": 1440,
        "height": 900,
        "resizable": true,
        "maximized": true,
        "fullscreen": false,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self'; media-src stream: http://stream.localhost; script-src 'wasm-unsafe-eval'"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "soccer.event.tagger",
      "copyright": "Â© 2024 Qoid Naufal",
      "category": "Sports",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
