{
  "build": {
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Soccer Event Tagger",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "windows": [
      {
        "title": "Soccer Event Tagger",
        "width": 1440,
        "height": 900,
        "resizable": true,
        "maximized": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost stream: http://stream.localhost"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "soccer.event.tagger",
      "copyright": "Â© 2024 Qoid Naufal",
      "category": "Sports",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
